{
    "manifest_version": 2,
    "name": "mailto: Sapo Mail, Gmail e Outlook",
    "version": "2.0",
    "homepage_url": "https://github.com/gmatosferreira/mailTo",
    "description": "Envie emails no seu servi√ßo habitual de forma simples sem sair do navegador!",
    "icons": {
        "48": "icons/mtsp-48.png",
        "32": "icons/mtsp-32.png"
    },
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "resources/jquery-3.4.1.min.js", 
                "scripts/mailto.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "scripts/updates.js"
        ]
    },
    "web_accessible_resources": [
        "icons/*",
        "images/*",
        "pages/*"
    ]
}
